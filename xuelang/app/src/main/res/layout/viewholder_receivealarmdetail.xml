<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_receiv_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            tools:text="接警人姓名"
            android:lines="1"
            android:layout_weight="1"
            android:padding="4dp"
            android:background="@drawable/tv_alarm_deatail_selector"
            android:textColor="@color/black" />
        <TextView
            android:id="@+id/tv_receiv_tel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            tools:text="接警人电话"
            android:lines="1"
            android:layout_weight="1"
            android:padding="4dp"
            android:background="@drawable/tv_alarm_deatail_selector"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/tv_receiv_type"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            tools:text="接警人类型"
            android:lines="1"
            android:layout_weight="1"
            android:padding="4dp"
            android:background="@drawable/tv_alarm_deatail_selector"
            android:textColor="@color/black" />

        
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_receiv_group_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            tools:text="接警人所属"
            android:lines="1"
            android:layout_weight="1"
            android:padding="4dp"
            android:background="@drawable/tv_alarm_deatail_selector"
            android:textColor="@color/black" />
        <TextView
            android:id="@+id/tv_receiv_detail"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            tools:text="接警人地址"
            android:lines="1"
            android:layout_weight="1"
            android:padding="4dp"
            android:background="@drawable/tv_alarm_deatail_selector"
            android:textColor="@color/black" />
        <TextView
            android:id="@+id/tv_receiv_time"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            tools:text="接警时间"
            android:lines="1"
            android:layout_weight="1"
            android:padding="4dp"
            android:background="@drawable/tv_alarm_deatail_selector"
            android:textColor="@color/black" />

    </LinearLayout>

</LinearLayout>