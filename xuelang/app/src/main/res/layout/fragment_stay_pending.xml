<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_easy_people_info"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    >
    <com.scu.miomin.shswiperefresh.core.SHSwipeRefreshLayout
        android:id="@+id/swipeRefreshLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:load_text="加载更多"
        app:progress_bar_color="@color/blue"
        app:refresh_text="下拉刷新"
        app:guidance_text_color="@color/blue"
        app:guidance_view_bg_color="@android:color/transparent">
        <android.support.v7.widget.RecyclerView
            android:id="@+id/recyclerView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"></android.support.v7.widget.RecyclerView>
    </com.scu.miomin.shswiperefresh.core.SHSwipeRefreshLayout>

</RelativeLayout>
