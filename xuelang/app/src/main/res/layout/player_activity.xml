<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/title" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ListView
            android:id="@+id/listview"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/list"
            tools:listitem="@layout/player_item">

        </ListView>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2.4">

            <LinearLayout
                android:id="@+id/playerFrament"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_above="@+id/bottom_rl"
                android:layout_centerInParent="true"

                android:orientation="horizontal"></LinearLayout>

            <RelativeLayout
                android:id="@+id/bottom_rl"
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:layout_alignParentBottom="true"
                android:background="#252527">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_above="@+id/bottom_rl_all">

                    <TextView
                        android:id="@+id/tv_gundong_info"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:layout_toLeftOf="@+id/btn_info_notice"
                        android:text="当前滚动消息" />
                    <Button
                        android:id="@+id/btn_info_notice"
                        android:layout_width="wrap_content"
                        android:layout_toLeftOf="@+id/btn_people_info"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="24dp"
                        android:background="@drawable/btn_info_notice_selector"
                        android:layout_height="wrap_content" />
                    <Button
                        android:id="@+id/btn_people_info"
                        android:layout_width="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"
                        android:background="@drawable/btn_people_info_selector"
                        android:layout_height="wrap_content" />


                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/bottom_rl_all"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:background="#0C0C0E">

                    <LinearLayout
                        android:id="@+id/ll_btn"

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_toLeftOf="@+id/btn_full_sceen"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.7">

                            <Button
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"

                                android:layout_marginBottom="12dp"
                                android:layout_marginTop="12dp"
                                android:layout_weight="1"
                                android:background="@drawable/btn_fire_warning_selector" />

                            <Button
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="12dp"
                                android:layout_marginLeft="12dp"
                                android:layout_marginTop="12dp"
                                android:layout_weight="1"
                                android:background="@drawable/btn_theft_selector" />

                            <Button
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="12dp"
                                android:layout_marginLeft="12dp"
                                android:layout_marginTop="12dp"
                                android:layout_weight="1"
                                android:background="@drawable/btn_hurt_selector" />

                            <Button
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="12dp"
                                android:layout_marginLeft="12dp"
                                android:layout_marginTop="12dp"
                                android:layout_weight="1"
                                android:background="@drawable/btn_other_selector" />
                        </LinearLayout>

                        <Button
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="12dp"
                            android:layout_weight="0.3"
                            android:background="@mipmap/btn_other"
                            android:visibility="invisible" />


                    </LinearLayout>

                    <Button
                        android:id="@+id/btn_full_sceen"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="12dp"
                        android:layout_marginRight="12dp"
                        android:background="@drawable/full_screen_selector" />

                </RelativeLayout>
            </RelativeLayout>

        </RelativeLayout>
    </LinearLayout>


</LinearLayout>