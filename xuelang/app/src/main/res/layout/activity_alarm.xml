<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="#050d12">

        <Button
            android:id="@+id/bt_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:background="@drawable/bt_back_selector"
            android:padding="12dp"
            android:text="返回首页"
            android:layout_marginLeft="6dp"
            android:textColor="@android:color/white" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="left"
            android:text="通知公告"
            android:textColor="@android:color/white"
            android:textSize="32sp" />


        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_alignParentBottom="true"
            android:background="@android:color/darker_gray"></View>


    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#050d12">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:padding="6dp"
            android:layout_margin="10dp"
            android:background="@drawable/rl_backgound_selector"
            android:layout_weight="1">

            <TextView
                android:id="@+id/titles"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:text="求助内容"
                android:textColor="@android:color/white"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/et_info"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_above="@+id/ll_image"
                android:gravity="left|top"
                android:layout_below="@+id/titles"

                android:layout_marginTop="12dp" />

            <HorizontalScrollView
                android:id="@+id/ll_image"

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scrollbars="none"
                android:layout_above="@+id/bt_alrm_right_now"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left|center"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/bt_image0"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:src="@mipmap/image_upto"
                        android:textColor="@android:color/white" />

                    <ImageView
                        android:id="@+id/bt_image1"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:layout_marginLeft="12dp"
                        android:src="@mipmap/image_upto"
                        android:textColor="@android:color/white" />

                    <ImageView
                        android:id="@+id/bt_image2"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:layout_marginLeft="12dp"
                        android:src="@mipmap/image_upto"
                        android:textColor="@android:color/white" />

                    <ImageView
                        android:id="@+id/bt_image3"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:layout_marginLeft="12dp"
                        android:src="@mipmap/image_upto"
                        android:textColor="@android:color/white" />

                    <ImageView
                        android:id="@+id/bt_image4"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:layout_marginLeft="12dp"
                        android:src="@mipmap/image_upto"
                        android:textColor="@android:color/white" />
                </LinearLayout>

            </HorizontalScrollView>


            <Button
                android:id="@+id/bt_alrm_right_now"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="30dp"

                android:padding="12dp"
                android:layout_marginTop="12dp"
                android:background="@drawable/bt_selector_update"
                android:text="立即报警"
                android:textColor="@android:color/white" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="@drawable/rl_backgound_selector"
            android:layout_margin="10dp"
            android:layout_weight="1">

            <Button
                android:id="@+id/bt_alrm_to_carme"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginLeft="30dp"
                android:padding="12dp"
                android:background="@drawable/bt_selector_update"
                android:text="拍照报警"
                android:textColor="@android:color/white" />
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>