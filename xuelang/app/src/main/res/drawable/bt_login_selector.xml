<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">


    <item  android:state_enabled="true" android:state_pressed="false" android:state_focused="false" >

        <shape>
            <stroke android:width="3px" android:color="#0099F1"></stroke>
                <solid android:color="#0099F1"></solid>
            <corners android:radius="5dp"></corners>
        </shape>
    </item>
    <item android:state_enabled="true" android:state_pressed="false" android:state_focused="true">
        <shape>
            <stroke android:width="3px" android:color="#0378bc"></stroke>
            <solid android:color="#0378bc"></solid>
            <corners android:radius="5dp"></corners>
        </shape>
    </item>


    <item android:state_enabled="true" android:state_pressed="true" android:state_focused="false" >
        <shape>
            <stroke android:width="3px" android:color="#0378bc"></stroke>
            <solid android:color="#0378bc"></solid>
            <corners android:radius="5dp"></corners>
        </shape>
    </item>


    <item android:state_enabled="false"  >
        <shape>
            <stroke android:width="3px" android:color="@android:color/darker_gray"></stroke>
            <solid android:color="@android:color/darker_gray"></solid>
            <corners android:radius="5dp"></corners>
        </shape>
    </item>

</selector>