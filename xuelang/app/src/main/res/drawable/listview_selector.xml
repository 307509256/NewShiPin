<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">


    <item   android:state_selected="false" android:state_pressed="false" android:state_focused="false" >
        <shape>
            <solid android:color="#050C12"></solid>
            <corners android:radius="5dp"></corners>
        </shape>
    </item>
    <item android:state_selected="false" android:state_pressed="false" android:state_focused="true">
        <shape>
            <stroke android:width="3px" android:color="#0099F1"></stroke>
            <solid android:color="#050C12"></solid>
            <corners android:radius="5dp"></corners>
        </shape>
    </item>


    <item android:state_selected="true" android:state_pressed="false" android:state_focused="true">
        <shape>
            <stroke android:width="3px" android:color="#0099F1"></stroke>
            <solid android:color="#050C12"></solid>
            <corners android:radius="5dp"></corners>
        </shape>
    </item>


    <item android:state_selected="true" android:state_pressed="true" android:state_focused="false" >
        <shape>
            <stroke android:width="3px" android:color="#0099F1"></stroke>
            <solid android:color="@android:color/white"></solid>
            <corners android:radius="5dp"></corners>
        </shape>
    </item>

    <item android:state_selected="true" android:state_pressed="true" android:state_focused="true" >
        <shape>
            <stroke android:width="3px" android:color="#0099F1"></stroke>
            <solid android:color="@android:color/white"></solid>
            <corners android:radius="5dp"></corners>
        </shape>
    </item>

</selector>